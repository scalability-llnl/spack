Subject: [PATCH] Add hipblas-common include path

---
 library/src/CMakeLists.txt | 2 ++
 1 file changed, 2 insertions(+)

diff --git a/library/src/CMakeLists.txt b/library/src/CMakeLists.txt
index 8c781e3..16f6a37 100644
--- a/library/src/CMakeLists.txt
+++ b/library/src/CMakeLists.txt
@@ -686,6 +686,7 @@ target_link_libraries( rocblas PRIVATE "-Xlinker --exclude-libs=ALL" ) # HIDE sy
 
 if(BUILD_WITH_HIPBLASLT)
   find_package( hipblaslt ${HIPBLASLT_VERSION} REQUIRED CONFIG PATHS ${hipblaslt_path} ${ROCM_PATH})
+  find_package( hipblas-common REQUIRED CONFIG PATHS ${HIP_DIR} ${ROCM_PATH} /opt/rocm)
 endif()
 
 if( BUILD_WITH_TENSILE )
@@ -698,6 +699,7 @@ if( BUILD_WITH_TENSILE )
     target_include_directories( rocblas
       SYSTEM BEFORE PRIVATE
         $<BUILD_INTERFACE:${HIPBLASLT_INCLUDE_DIR}>
+        $<BUILD_INTERFACE:${HIPBLAS-COMMON_INCLUDE_DIRS}>
     )
     if( BUILD_SHARED_LIBS )
       target_link_libraries( rocblas PRIVATE roc::hipblaslt )
